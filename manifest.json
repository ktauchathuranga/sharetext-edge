{
    "manifest_version": 3,
    "name": "ShareText",
    "version": "0.1.0",
    "description": "Quickly share text/link from your browser to your phone using QR codes. Just select, generate, and scan!",
    "permissions": [
      "contextMenus",
      "activeTab"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    }
  }
  